---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CityCTA from "../../components/CityCTA.astro";
import CityReviews from "../../components/CityReviews.astro";

// City Page Components
import GlassServiceCard from "../../components/cities/GlassServiceCard.astro";
import FeatureCard from "../../components/cities/FeatureCard.astro";
import ImageTextSection from "../../components/cities/ImageTextSection.astro";
import ChecklistItem from "../../components/cities/ChecklistItem.astro";
import SectionHeader from "../../components/cities/SectionHeader.astro";
import CTABanner from "../../components/cities/CTABanner.astro";
import InfoPill from "../../components/cities/InfoPill.astro";
import CityServicesGrid from "../../components/cities/CityServicesGrid.astro";
import CitySchedulingHero from "../../components/cities/CitySchedulingHero.astro";

// 1. FETCH ALL CITIES & GENERATE PATHS
import cities from "../../data/cities.json";

export async function getStaticPaths() {
  return cities.map((city) => ({
    params: { slug: city.slug },
    props: { city },
  }));
}

// 2. PAGE TEMPLATE
const { city } = Astro.props;
const acf = (city as any).cityFields;

// Helper to clean city name (e.g. "Mobile Tire Service in Elgin, IL" -> "Elgin")
const cityName = city.title
  .replace("Mobile Tire Service in ", "")
  .replace(", IL", "");

// FAQ Schema Generation
const faqs = acf.faqs || [];
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((f: any) => ({
    "@type": "Question",
    name: f.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: f.answer,
    },
  })),
};
---

<BaseLayout title={`${city.title} | Queens Mobile Tires`}>
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "AutomotiveBusiness",
    "name": `Queens Mobile Tires in ${cityName}`,
    "address": {
      "@type": "PostalAddress",
      "addressLocality": cityName,
      "addressRegion": "IL",
      "addressCountry": "US"
    },
    "telephone": "+1-847-925-1100",
    "url": `https://queensmobiletires.com/cities/${city.slug}`
  }
  </script>
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://queensmobiletires.com/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Locations",
        "item": "https://queensmobiletires.com/locations"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": cityName,
        "item": `https://queensmobiletires.com/cities/${city.slug}`
      }]
    }
  </script>
  {
    faqs.length > 0 && (
      <script
        type="application/ld+json"
        slot="head"
        set:html={JSON.stringify(faqSchema)}
      />
    )
  }

  <!-- HERO SECTION: Preserving the Original "Split" Design -->
  <section
    class="relative pt-6 pb-20 lg:pt-12 lg:pb-32 bg-white overflow-hidden"
    data-build-date={new Date().toISOString()}
  >
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left: Text Content -->
        <div class="relative z-10 text-left order-2 lg:order-1">
          <!-- Eyebrow Badge -->
          <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-queens-secondary/10 border border-queens-secondary/20 mb-8"
          >
            <span class="w-2 h-2 rounded-full bg-queens-secondary"></span>
            <span class="text-sm font-medium text-queens-primary/70 font-sans">
              Serving {cityName}, IL
            </span>
          </div>

          <h1
            class="text-4xl md:text-6xl font-sans font-normal tracking-tighter text-queens-primary mb-8 leading-[1.1]"
          >
            Mobile Tire Service <br /> in <span
              class="font-serif italic text-queens-secondary"
              >{cityName}, IL</span
            >
          </h1>

          <h3
            class="text-xl md:text-2xl text-queens-primary/60 mb-6 leading-relaxed font-sans font-light"
          >
            We bring the tire shop to your driveway or office in {cityName}.
          </h3>

          <!-- New Copy from HTML Sample -->
          <p class="text-base text-gray-600 mb-8 leading-relaxed">
            {
              acf.introText ||
                `Stuck on the road? Flat in your driveway? We come to you in ${cityName} - same-day service, 7 days a week.`
            }
          </p>

          <div class="flex flex-wrap gap-4 items-center">
            <a
              href="/buy-new-tires"
              data-astro-reload
              class="btn-primary shadow-2xl hover:scale-105 transition-transform duration-300 px-10 py-5 text-xl"
            >
              Buy New Tires
            </a>
          </div>

          <!-- Audio Player (Premium Design with Rotating Beam) -->
          {city.audioFile && (
            <div 
              class="mt-8 pt-8 border-t border-gray-100 dark:border-gray-800"
              x-data="{ playing: false, audio: null, progress: 0, currentTime: '00:00' }"
              x-init="
                audio = $refs.audioPlayer;
                audio.addEventListener('timeupdate', () => {
                  progress = (audio.currentTime / audio.duration) * 100;
                  let min = Math.floor(audio.currentTime / 60);
                  let sec = Math.floor(audio.currentTime % 60);
                  currentTime = (min < 10 ? '0' : '') + min + ':' + (sec < 10 ? '0' : '') + sec;
                });
                audio.addEventListener('ended', () => { playing = false; progress = 0; currentTime = '00:00'; });
              "
            >
              <!-- Player Card Container with Rotating Beam -->
              <div class="audio-player-wrapper relative rounded-2xl p-[2px]">
                <!-- Rotating Beam Border -->
                <div class="absolute inset-0 rounded-2xl overflow-hidden">
                  <div
                    class="audio-beam-border absolute inset-[-50%] bg-[conic-gradient(from_0deg,transparent_0deg,transparent_60deg,var(--color-queens-secondary)_120deg,#22d3ee_180deg,transparent_240deg,transparent_360deg)]"
                  >
                  </div>
                </div>

                <!-- Inner Card (Glassmorphic) -->
                <div
                  class="relative z-10 bg-white/95 dark:bg-slate-900/95 backdrop-blur-xl rounded-[14px] p-5 flex items-center gap-5 shadow-xl"
                >
                  <audio x-ref="audioPlayer" src={city.audioFile} preload="metadata" class="hidden"></audio>

                  <!-- Premium Play Button -->
                  <button
                    @click="playing ? audio.pause() : audio.play(); playing = !playing"
                    class="relative w-14 h-14 flex-shrink-0 flex items-center justify-center rounded-full bg-gradient-to-br from-queens-primary to-queens-secondary text-white hover:from-queens-secondary hover:to-cyan-400 transition-all duration-300 shadow-lg shadow-queens-secondary/30 hover:shadow-xl hover:shadow-queens-secondary/50 hover:scale-110"
                    aria-label="Play Audio Message"
                  >
                    <template x-if="!playing">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="w-6 h-6 ml-1"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </template>
                    <template x-if="playing">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="w-6 h-6"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M6.75 5.25a.75.75 0 01.75-.75H9a.75.75 0 01.75.75v13.5a.75.75 0 01-.75.75H7.5a.75.75 0 01-.75-.75V5.25zm7.5 0A.75.75 0 0115 4.5h1.5a.75.75 0 01.75.75v13.5a.75.75 0 01-.75.75H15a.75.75 0 01-.75-.75V5.25z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </template>
                  </button>

                  <!-- Progress Section -->
                  <div class="flex-grow">
                    <div
                      class="flex justify-between text-xs font-semibold text-queens-primary/70 dark:text-gray-400 mb-3"
                    >
                      <span class="flex items-center gap-1.5">
                        <span class="w-2 h-2 rounded-full bg-queens-secondary animate-pulse"></span>
                        Listen Now
                      </span>
                      <span class="font-mono" x-text="currentTime">00:00</span>
                    </div>
                    <div
                      class="h-2 bg-gray-200/80 dark:bg-slate-700/80 rounded-full overflow-hidden cursor-pointer relative shadow-inner"
                      @click="let rect = $el.getBoundingClientRect(); let x = $event.clientX - rect.left; let percent = x / rect.width; audio.currentTime = percent * audio.duration;"
                    >
                      <div
                        class="absolute top-0 left-0 h-full bg-gradient-to-r from-queens-secondary to-cyan-400 rounded-full transition-all duration-100"
                        :style="`width: ${progress}%`"
                      >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>

        <!-- Right: Image (Truck Proof) -->
        <div class="relative order-1 lg:order-2">
          <div
            class="relative rounded-3xl overflow-hidden shadow-2xl aspect-[4/3] group"
          >
            <div
              class="absolute inset-0 bg-gradient-to-tr from-queens-secondary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"
            >
            </div>
            {
              acf.image1?.node?.sourceUrl ? (
                <img
                  src={acf.image1.node.sourceUrl}
                  alt={`Queens Mobile Tires van in ${cityName}`}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                  <span class="text-gray-400">
                    queens-van-in-{cityName.toLowerCase()}.jpg
                  </span>
                </div>
              )
            }
            <!-- Caption Overlay -->
            <div
              class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-queens-primary/90 to-transparent p-6 pt-20"
            >
              <p class="text-white text-sm font-medium">
                Our mobile tire shop in {cityName}
              </p>
            </div>
          </div>
          <!-- Decorative Blobs -->
          <div
            class="absolute -top-20 -right-20 w-72 h-72 bg-queens-secondary/10 rounded-full blur-3xl -z-10"
          >
          </div>
          <div
            class="absolute -bottom-20 -left-20 w-72 h-72 bg-queens-light/20 rounded-full blur-3xl -z-10"
          >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- EXTENDED SERVICES: Premium Multi-Section Design with Full Content -->
  {
    acf.mobileServicesContent && (
      <>
        {/* Section 1: Services Grid - Using Reusable Component */}
        <CityServicesGrid
          cityName={cityName}
          services={acf.mobileServicesContent.services}
        />

        {/* Section 3: Why Choose Queens Mobile - Dynamic Loop */}
        <section class="py-24 bg-gradient-to-b from-gray-50 to-white dark:from-slate-900 dark:to-slate-900 transition-colors duration-300">
          <div class="container mx-auto px-6 max-w-7xl">
            <div class="text-center mb-16">
              <span class="text-queens-secondary font-semibold text-sm uppercase tracking-wider">
                The Queens Difference
              </span>
              <h2 class="text-4xl md:text-5xl font-bold text-queens-primary mt-3 mb-6">
                Why Choose Queens Mobile in {cityName}?
              </h2>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
              {acf.mobileServicesContent.section3.map(
                (item: any, index: number) => (
                  <div class="group relative bg-white rounded-3xl p-10 shadow-lg border border-gray-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500">
                    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-queens-secondary to-queens-secondary/50 rounded-t-3xl" />
                    <div class="w-20 h-20 bg-gradient-to-br from-queens-secondary/20 to-queens-secondary/5 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-300">
                      {index === 0 && (
                        <svg
                          class="w-10 h-10 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M13 10V3L4 14h7v7l9-11h-7z"
                          />
                        </svg>
                      )}
                      {index === 1 && (
                        <svg
                          class="w-10 h-10 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                          />
                        </svg>
                      )}
                      {index === 2 && (
                        <svg
                          class="w-10 h-10 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                          />
                        </svg>
                      )}
                    </div>
                    <h3
                      class="text-2xl font-bold text-queens-primary mb-4"
                      set:html={item.title}
                    />
                    <p
                      class="text-gray-600 leading-relaxed text-lg"
                      set:html={item.text}
                    />
                  </div>
                ),
              )}
            </div>
          </div>
        </section>

        {/* Section 4: Mobile Tire Services Convenience - Dynamic List */}
        <section class="py-24 bg-white">
          <div class="container mx-auto px-6 max-w-7xl">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
              {/* Content */}
              <div class="space-y-8 order-2 lg:order-1">
                <div>
                  <span class="text-queens-secondary font-semibold text-sm uppercase tracking-wider">
                    At Your Location
                  </span>
                  <h2
                    class="text-4xl font-bold text-queens-primary mt-3 mb-6 leading-tight"
                    set:html={acf.mobileServicesContent.section4.title}
                  />
                  <p
                    class="text-lg text-gray-600 leading-relaxed mb-8"
                    set:html={acf.mobileServicesContent.section4.text}
                  />
                </div>

                <div>
                  <h3 class="text-xl font-bold text-queens-primary mb-6">
                    Common Mobile Services Include:
                  </h3>
                  <div class="space-y-4">
                    {acf.mobileServicesContent.section4.list.map(
                      (item: string) => (
                        <div class="flex items-center gap-4 p-4 rounded-2xl bg-slate-50 dark:bg-transparent border border-transparent dark:border-queens-secondary/40 hover:bg-queens-secondary/5 transition-colors duration-300">
                          <div class="w-10 h-10 bg-queens-secondary rounded-full flex items-center justify-center flex-shrink-0">
                            <svg
                              class="w-5 h-5 text-white"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-width="2"
                                stroke-linecap="round"
                                d="M5 13l4 4L19 7"
                              />
                            </svg>
                          </div>
                          <p
                            class="text-gray-700 font-medium"
                            set:html={item}
                          />
                        </div>
                      ),
                    )}
                  </div>
                </div>
              </div>

              {/* Image */}
              <div class="relative group order-1 lg:order-2">
                <div class="absolute -inset-4 bg-gradient-to-r from-queens-primary/20 to-queens-secondary/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700" />
                <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                  <img
                    src="/images/mobile-tire-service-algonquin-il.webp"
                    alt="Mobile tire service van in action"
                    class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-queens-primary/60 to-transparent" />
                  <div class="absolute bottom-6 left-6 right-6">
                    <span class="inline-block px-4 py-2 bg-white/90 dark:bg-slate-900/90 backdrop-blur-sm rounded-full text-sm font-medium text-queens-primary dark:text-white">
                      ✓ Fully Equipped Mobile Van
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        {/* Section 5: The Tire Shop That Comes to You - Dynamic Highlights */}
        <section class="py-24 bg-gray-50">
          <div class="container mx-auto px-6 max-w-7xl">
            <div class="max-w-4xl mx-auto text-center mb-16">
              <span class="text-queens-secondary font-semibold text-sm uppercase tracking-wider">
                Highest Rated Mobile Service
              </span>
              <h2
                class="text-4xl md:text-5xl font-bold text-queens-primary mt-3 mb-6"
                set:html={acf.mobileServicesContent.section5.title}
              />
              <p
                class="text-xl text-gray-600 leading-relaxed"
                set:html={acf.mobileServicesContent.section5.text}
              />
            </div>

            <div class="grid md:grid-cols-3 gap-8">
              {acf.mobileServicesContent.section5.highlights.map(
                (highlight: any, index: number) => (
                  <div class="bg-white rounded-3xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300 text-center">
                    <div class="w-16 h-16 bg-queens-secondary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                      {index === 0 && (
                        <svg
                          class="w-8 h-8 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                          />
                        </svg>
                      )}
                      {index === 1 && (
                        <svg
                          class="w-8 h-8 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                          />
                        </svg>
                      )}
                      {index === 2 && (
                        <svg
                          class="w-8 h-8 text-queens-secondary"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-width="2"
                            stroke-linecap="round"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                          />
                        </svg>
                      )}
                    </div>
                    <h3
                      class="text-xl font-bold text-queens-primary mb-3"
                      set:html={highlight.title}
                    />
                    <p class="text-gray-600" set:html={highlight.text} />
                  </div>
                ),
              )}
            </div>
          </div>
        </section>

        {/* Section 6: Next-Day Service Hero (Moved from top) */}
        <CitySchedulingHero
          cityName={cityName}
          section2={acf.mobileServicesContent.section2}
          backgroundImage="/images/mobile-tire-service-barrington-il.webp"
        />
      </>
    )
  }

  <!-- SERVICES GRID: New Content, Matching Design System -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-queens-primary mb-4">
          We Bring the Shop to You
        </h2>
        <p class="text-lg text-gray-600">
          Full-service tire care at your home or office in {cityName}.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div
          class="bg-white p-8 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 group"
        >
          <div
            class="w-14 h-14 bg-queens-secondary/10 rounded-2xl flex items-center justify-center mb-6 px-1"
          >
            <!-- Icon: Tire/Wheel -->
            <!-- Icon: Tire/Wheel -->
            <svg class="w-8 h-8 text-queens-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-width="1.5" stroke-linecap="round" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm0 10c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-queens-primary mb-3">
            New Tire Installation
          </h3>
          <p class="text-gray-600 leading-relaxed">
            We bring & mount any brand - Michelin, Goodyear, Continental - right
            at your location.
          </p>
        </div>

        <!-- Service 2 -->
        <div
          class="bg-white p-8 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 group"
        >
          <div
            class="w-14 h-14 bg-queens-secondary/10 rounded-2xl flex items-center justify-center mb-6 px-1"
          >
            <!-- Icon: Wrench -->
            <!-- Icon: Wrench -->
            <svg class="w-8 h-8 text-queens-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-width="1.5" stroke-linecap="round" d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-queens-primary mb-3">
            Flat Tire Repair
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Patch or plug in under 30 minutes. No tow needed, we come to you to
