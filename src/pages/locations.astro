---
import BaseLayout from "../layouts/BaseLayout.astro";
import cities from "../data/cities.json";

// Sort cities alphabetically
const sortedCities = cities.sort((a, b) => a.title.localeCompare(b.title));
---

<BaseLayout title="Service Areas | Queens Mobile Tires" description="We serve many locations in Illinois. Find your city here.">
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Service Areas",
    "description": "We serve many locations in Illinois. Find your city here.",
    "url": "https://queensmobiletires.com/locations"
  }
  </script>
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://queensmobiletires.com/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Locations",
        "item": "https://queensmobiletires.com/locations"
      }]
    }
  </script>
  <section class="relative py-20 lg:py-32 bg-white overflow-hidden">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left: Text Content -->
        <div class="relative z-10 text-left order-2 lg:order-1">
           <!-- Eyebrow Badge -->
          <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-queens-secondary/10 border border-queens-secondary/20 mb-8"
          >
            <span class="w-2 h-2 rounded-full bg-queens-secondary"></span>
            <span
              class="text-sm font-medium text-queens-primary/70 font-sans"
            >
              We Come To You
            </span>
          </div>

          <h1 class="text-4xl md:text-6xl font-sans font-medium tracking-tight text-queens-primary mb-8 leading-[1.1]">
            Our Service Areas
          </h1>
          
          <p class="text-xl text-gray-500 max-w-lg mb-8 leading-relaxed">
            Proudly serving communities across Northern Illinois with our top-rated mobile concierge tire service.
          </p>
        </div>

        <!-- Right: Image Placeholder -->
        <div class="relative order-1 lg:order-2">
            <div class="relative rounded-3xl overflow-hidden shadow-2xl aspect-[4/3] group">
                <div class="absolute inset-0 bg-gradient-to-tr from-queens-secondary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src="/images/mobile-tire-installation-highway.webp" 
                  alt="Mobile Tire Installation on Highway" 
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
            </div>
            <!-- Decorative Blob -->
            <div class="absolute -top-20 -right-20 w-72 h-72 bg-queens-secondary/10 rounded-full blur-3xl -z-10"></div>
            <div class="absolute -bottom-20 -left-20 w-72 h-72 bg-queens-light/20 rounded-full blur-3xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedCities.map((city) => (
          <a href={`/cities/${city.slug}`} class="group block bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100 overflow-hidden transform hover:-translate-y-1">
            <div class="relative h-48 bg-gray-200 overflow-hidden">
               {city.cityFields.image1?.node?.sourceUrl ? (
                  <img src={city.cityFields.image1.node.sourceUrl} alt={city.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" loading="lazy" />
               ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-800 to-queens-black flex items-center justify-center relative">
                    <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white to-transparent"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400 opacity-50">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                    </svg>
                  </div>
               )}
               <!-- Overlay -->
               <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-300"></div>
            </div>
            
            <div class="p-6 relative">
              <h2 class="text-2xl font-bold text-queens-black group-hover:text-queens-secondary transition-colors mb-2">
                {city.title.replace('Mobile Tire Service in ', '').replace(', IL', '')}
              </h2>
               <p class="text-gray-500 text-sm line-clamp-2 mb-4 h-10">
                 We Bring the Tire Shop to {city.title.replace('Mobile Tire Service in ', '').replace(', IL', '')}
               </p>
               
               <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100">
                 <span class="text-gray-400 text-xs font-medium uppercase tracking-wider">Illinois</span>
                 <span class="flex items-center text-queens-secondary font-semibold text-sm group-hover:underline decoration-2 underline-offset-4">
                   Explore <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"><path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd" /></svg>
                 </span>
               </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
