---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { elginBrand } from "../../brands";
import Hero from "../../components/Hero.astro";
import ThreeSteps from "../../components/ThreeSteps.astro";
import BentoGrid from "../../components/BentoGrid.astro";
import FeaturedCities from "../../components/FeaturedCities.astro";
import Testimonials from "../../components/Testimonials.astro";
import TireWidget from "../../components/TireWidget.astro";
import ServicesHome from "../../components/ServicesHome.astro";
import TrustAnchor from "../../components/TrustAnchor.astro";
---

<BaseLayout brand={elginBrand} title="Queens Mobile Tires | We Come To You">
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "AutomotiveBusiness",
      "name": "Queens Mobile Tires",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Mobile Service",
        "addressLocality": "Chicago",
        "addressRegion": "IL",
        "postalCode": "60007",
        "addressCountry": "US"
      },
      "telephone": "+1-847-925-1100",
      "url": "https://queensmobiletires.com/"
    }
  </script>
  <!-- Unique Hero for Elgin -->
  <section class="relative py-24 bg-white overflow-hidden">
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none z-0"
    >
      <div
        class="absolute top-[20%] left-[10%] w-96 h-96 bg-[var(--color-queens-secondary)]/10 rounded-full blur-3xl mix-blend-multiply filter opacity-70 animate-blob"
      >
      </div>
      <div
        class="absolute top-[20%] right-[10%] w-96 h-96 bg-[var(--color-queens-light)]/10 rounded-full blur-3xl mix-blend-multiply filter opacity-70 animate-blob animation-delay-2000"
      >
      </div>
    </div>

    <div class="container relative z-10 mx-auto px-6 max-w-5xl text-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-queens-secondary)]/10 border border-[var(--color-queens-secondary)]/20 mb-8"
      >
        <span class="w-2 h-2 rounded-full bg-[var(--color-queens-secondary)]"
        ></span>
        <span
          class="text-sm font-medium text-[var(--color-queens-primary)]/70 font-sans"
          >Elgin's Premier Mobile Tire Service</span
        >
      </div>

      <h1
        class="text-5xl md:text-7xl font-sans font-normal tracking-tighter text-[var(--color-queens-primary)] mb-8 leading-[1.1]"
      >
        Queens Auto Services Elgin<br />
        <span class="font-serif italic text-[var(--color-queens-secondary)]"
          >We Come To You</span
        >
      </h1>

      <p
        class="text-xl md:text-2xl text-[var(--color-queens-primary)]/60 mb-12 max-w-2xl mx-auto leading-relaxed font-sans font-light"
      >
        Skip the waiting room. We deliver and install new tires right in your
        Elgin driveway or workplace.
      </p>

      <div class="flex justify-center gap-4">
        <a
          href="/elgin/buy-new-tires"
          class="px-8 py-4 bg-[var(--color-queens-secondary)] text-white font-bold rounded-full hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          Shop Tires in Elgin
        </a>
      </div>
    </div>
  </section>
  <ThreeSteps />
  <BentoGrid />
  <FeaturedCities brand={elginBrand} />
  <Testimonials />
  <TireWidget />
  <ServicesHome />
  <TrustAnchor />
</BaseLayout>
