---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ThreeSteps from "../components/ThreeSteps.astro";
import BentoGrid from "../components/BentoGrid.astro";
import FeaturedCities from "../components/FeaturedCities.astro";
import Testimonials from "../components/Testimonials.astro";
import TireWidget from "../components/TireWidget.astro";
import ServicesHome from "../components/ServicesHome.astro";
import TrustAnchor from "../components/TrustAnchor.astro";
import { mobileTiresBrand } from "../brands";
---

<BaseLayout
  brand={mobileTiresBrand}
  title="Queens Mobile Tires | We Come To You"
>
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "AutomotiveBusiness",
      "@id": "https://queensmobiletires.com/#localbusiness",
      "name": "Queens Mobile Tires",
      "image": "https://queensmobiletires.com/images/mobile-tire-service-algonquin-il.webp",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "2401 E Algonquin Rd",
        "addressLocality": "Lake in the Hills",
        "addressRegion": "IL",
        "postalCode": "60102",
        "addressCountry": "US"
      },
      "url": "https://queensmobiletires.com/",
      "telephone": "+1-847-925-1100",
      "priceRange": "$$",
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday"
          ],
          "opens": "08:00",
          "closes": "17:00"
        }
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Tire Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Mobile Tire Installation",
              "description": "Professional mounting and balancing at your location."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Flat Tire Repair",
              "description": "On-site patch and plug services for punctured tires."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "TPMS Sensor Service",
              "description": "Tire Pressure Monitoring System diagnostics and reset."
            }
          }
        ]
      },
      "subjectOf": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Do I have to go to a tire shop?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "No! We bring the entire tire shop to you. We install and balance tires in your driveway or at your workplace."
            }
          },
          {
            "@type": "Question",
            "name": "What areas do you serve?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "We serve Lake in the Hills, Elgin, Algonquin, Barrington, and surrounding Northern Illinois suburbs."
            }
          }
        ]
      }
    }
  </script>
  <Hero brand={mobileTiresBrand} />
  <ThreeSteps />
  <BentoGrid brand={mobileTiresBrand} />
  <FeaturedCities brand={mobileTiresBrand} />
  <Testimonials />
  <TireWidget />
  <ServicesHome brand={mobileTiresBrand} />
  <TrustAnchor />
</BaseLayout>
