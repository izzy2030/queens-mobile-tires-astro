---
// src/components/FeaturedCities.astro
import cities from "../data/cities.json";
import type { BrandConfig } from "../brands";
import { mobileTiresBrand } from "../brands";

const { brand = mobileTiresBrand } = Astro.props as { brand?: BrandConfig };

const featuredCities = cities.slice(0, 6);
---

<section
    class="py-24 bg-white dark:bg-slate-900 relative overflow-hidden transition-colors duration-300"
>
    <div class="container mx-auto px-6 max-w-7xl">
        <div class="text-center mb-16">
            <h2
                class="text-4xl md:text-5xl font-extrabold text-queens-primary dark:text-white mb-6"
            >
                Our Service Areas
            </h2>
            <p
                class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto"
            >
                We are proud to serve communities across Northern Illinois with
                our top-rated mobile concierge tire service.
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                featuredCities.map((city) => (
                    <a
                        href={`/cities/${city.slug}`}
                        class="group block bg-white dark:bg-slate-800 rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden transform hover:-translate-y-1"
                    >
                        <div class="relative h-48 bg-gray-200 dark:bg-gray-700 overflow-hidden">
                            {city.cityFields.image1?.node?.sourceUrl ? (
                                <img
                                    src={city.cityFields.image1.node.sourceUrl}
                                    alt={city.title}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                                />
                            ) : (
                                <div class="w-full h-full bg-gradient-to-br from-gray-800 to-queens-black flex items-center justify-center relative">
                                    <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white to-transparent" />
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        class="w-12 h-12 text-gray-400 opacity-50"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                                        />
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
                                        />
                                    </svg>
                                </div>
                            )}
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-300" />
                        </div>
                        <div class="p-6 relative">
                            <h3 class="text-2xl font-bold text-queens-black dark:text-white group-hover:text-queens-secondary transition-colors mb-2">
                                {city.title
                                    .replace("Mobile Tire Service in ", "")
                                    .replace(", IL", "")}
                            </h3>
                            <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
                                <span class="text-gray-400 text-xs font-medium uppercase tracking-wider">
                                    Illinois
                                </span>
                                <span class="flex items-center text-queens-secondary font-semibold text-sm group-hover:underline decoration-2 underline-offset-4">
                                    Explore{" "}
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                        class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
