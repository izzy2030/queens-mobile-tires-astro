---
interface Props {
    text: string;
}

const { text } = Astro.props;
---

<div
    class="flex items-center gap-4 p-4 rounded-2xl bg-gray-50 hover:bg-queens-secondary/5 transition-colors duration-300"
>
    <div
        class="w-10 h-10 bg-queens-secondary rounded-full flex items-center justify-center flex-shrink-0"
    >
        <svg
            class="w-5 h-5 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path stroke-width="2" stroke-linecap="round" d="M5 13l4 4L19 7"
            ></path>
        </svg>
    </div>
    <p class="text-gray-700 font-medium">
        <Fragment set:html={text} />
    </p>
</div>
