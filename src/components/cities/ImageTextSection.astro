---
interface Props {
    imageSrc: string;
    imageAlt: string;
    imageBadge?: string;
    imagePosition?: "left" | "right";
    background?: "white" | "gray";
}

const {
    imageSrc,
    imageAlt,
    imageBadge,
    imagePosition = "left",
    background = "white",
} = Astro.props;

const bgClass = background === "gray" ? "bg-gray-50" : "bg-white";
const isImageLeft = imagePosition === "left";
---

<section class={`py-24 ${bgClass}`}>
    <div class="container mx-auto px-6 max-w-7xl">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Image -->
            <div
                class={`relative group ${!isImageLeft ? "order-1 lg:order-2" : ""}`}
            >
                <div
                    class="absolute -inset-4 bg-gradient-to-r from-queens-secondary/20 to-queens-primary/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                >
                </div>
                <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                    <img
                        src={imageSrc}
                        alt={imageAlt}
                        class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-queens-primary/60 to-transparent"
                    >
                    </div>
                    {
                        imageBadge && (
                            <div class="absolute bottom-6 left-6 right-6">
                                <span class="inline-block px-4 py-2 bg-white/90 backdrop-blur-sm rounded-full text-sm font-medium text-queens-primary">
                                    âœ“ {imageBadge}
                                </span>
                            </div>
                        )
                    }
                </div>
            </div>

            <!-- Content Slot -->
            <div
                class={`space-y-8 ${!isImageLeft ? "order-2 lg:order-1" : ""}`}
            >
                <slot />
            </div>
        </div>
    </div>
</section>
