---
/**
 * CitySchedulingHero - Full-width hero section with background image
 * Features: Large heading, content text, glassmorphic info cards
 */

interface Section2Content {
    title: string;
    content1: string;
    content2: string;
}

interface Props {
    cityName: string;
    section2: Section2Content;
    backgroundImage?: string;
}

const {
    cityName,
    section2,
    backgroundImage = "/images/queens-van-service.webp",
} = Astro.props;
---

<section class="relative min-h-[600px] lg:min-h-[700px] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
        <img
            src={backgroundImage}
            alt={`Queens Mobile Tires service van in ${cityName}`}
            class="w-full h-full object-cover"
        />
        <!-- Gradient Overlay - Dark fade from left -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-[#0b1121]/95 via-[#0b1121]/80 to-transparent"
        >
        </div>
    </div>

    <!-- Content Container -->
    <div class="relative z-10 container mx-auto px-6 py-16 lg:py-24 max-w-7xl">
        <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[500px]">
            <!-- Left: Text Content -->
            <div class="max-w-xl">
                <!-- Large Heading -->
                <h2
                    class="text-3xl md:text-4xl lg:text-5xl font-sans font-bold leading-[1.1] mb-8 tracking-tight uppercase"
                    style="color: #ffffff !important;"
                >
                    Convenient<br />
                    Next-Day Service<br />
                    <span
                        class="font-serif font-normal italic"
                        style="color: #ffffff !important;"
                        >In {cityName}, IL</span
                    >
                </h2>

                <!-- Content Paragraphs -->
                <div class="space-y-6 mb-10">
                    <p
                        class="text-base lg:text-lg leading-relaxed"
                        style="color: rgba(255, 255, 255, 0.8) !important;"
                        set:html={section2.content1}
                    />
                    <p
                        class="text-base lg:text-lg leading-relaxed"
                        style="color: rgba(255, 255, 255, 0.8) !important;"
                        set:html={section2.content2}
                    />
                </div>

                <!-- Professional Badge -->
                <div
                    class="inline-flex items-center gap-2 px-5 py-3 rounded-full bg-white/10 backdrop-blur-sm border border-white/20"
                >
                    <svg
                        class="w-5 h-5 text-queens-secondary"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span class="font-medium" style="color: #ffffff !important;"
                        >Professional On-Site Service</span
                    >
                </div>
            </div>

            <!-- Right: Glassmorphic Info Cards -->
            <div
                class="flex flex-col sm:flex-row lg:flex-col xl:flex-row gap-4 lg:justify-end lg:items-end"
            >
                <!-- Hours Card -->
                <div
                    class="flex flex-col items-center p-6 lg:p-8 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 min-w-[180px]"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-white/20 flex items-center justify-center mb-4"
                    >
                        <svg
                            class="w-7 h-7"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            viewBox="0 0 24 24"
                            style="color: #ffffff !important;"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M12 6v6l4 2"></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-lg mb-1"
                        style="color: #ffffff !important;"
                    >
                        Mon - Sat
                    </h4>
                    <p
                        class="text-sm"
                        style="color: rgba(255, 255, 255, 0.6) !important;"
                    >
                        8:00 AM - 5:00 PM
                    </p>
                </div>

                <!-- Next-Day Card -->
                <div
                    class="flex flex-col items-center p-6 lg:p-8 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 min-w-[180px]"
                >
                    <div
                        class="w-14 h-14 rounded-full bg-white/20 flex items-center justify-center mb-4"
                    >
                        <svg
                            class="w-7 h-7"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            viewBox="0 0 24 24"
                            style="color: #ffffff !important;"
                        >
                            <rect x="3" y="4" width="18" height="18" rx="2"
                            ></rect>
                            <path d="M16 2v4M8 2v4M3 10h18"></path>
                            <path d="M9 16l2 2 4-4"></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-lg mb-1"
                        style="color: #ffffff !important;"
                    >
                        Next-Day
                    </h4>
                    <p
                        class="text-sm"
                        style="color: rgba(255, 255, 255, 0.6) !important;"
                    >
                        Appointments Available
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
