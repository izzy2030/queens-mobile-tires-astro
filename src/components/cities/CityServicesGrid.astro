---
/**
 * CityServicesGrid - Reusable component for displaying city services
 * Matches the premium dark design with icon pairs and card layout
 */

interface Service {
  title: string;
  text: string;
}

interface Props {
  cityName: string;
  services: Service[];
}

const { cityName, services } = Astro.props;

// Icon pairs for each service card (two icons per card as shown in design)
const iconPairs = [
  // Card 1: Tire + Gear (Doorstep Tire Delivery & Fitting)
  [
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8Z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8Z" fill="currentColor" fill-opacity="0.2"/>
      <circle cx="12" cy="12" r="1.5" fill="currentColor"/>
    </svg>`,
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1Z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" fill="currentColor" fill-opacity="0.2"/>
    </svg>`
  ],
  // Card 2: Wrench + Van (Home-Based Flat Tire Repair)
  [
    `<svg class="w-8 h-8 drop-shadow-md transform -rotate-45" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6-3.2 3.2-1.6-1.6a1 1 0 1 0-1.4 1.4l1.6 1.6-4.3 4.3a2.1 2.1 0 1 0 2.9 2.9l4.3-4.3 1.6 1.6a1 1 0 1 0 1.4-1.4l-1.6-1.6 3.2-3.2 1.6 1.6a1 1 0 1 0 1.4-1.4L17.7 7.2l1.9-1.9a2 2 0 0 0-2.8-2.8l-1.9 1.9-2.2-2.2a2 2 0 0 0-2.8 2.8l2.2 2.2-1.9 1.9a1 1 0 0 0 1.4 1.4l1.9-1.9 1.3 1.3z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M10 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" fill="currentColor" fill-opacity="0.2"/>
    </svg>`,
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M2.5 13.5v-2a3 3 0 0 1 3-3h11l3.3 2.5a2 2 0 0 1 .7 1.5v3a1 1 0 0 1-1 1h-1m-10 0H4.5a1 1 0 0 1-1-1v-2" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="6.5" cy="15.5" r="2.5"/>
      <circle cx="16.5" cy="15.5" r="2.5"/>
      <path d="M16 8.5h3L16.2 6.3a2 2 0 0 0-1.2-.3H10" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="16.5" cy="15.5" r="2.5" fill="currentColor" fill-opacity="0.2"/>
    </svg>`
  ],
  // Card 3: Shield + Location (Safety Anywhere)
  [
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M9 12l2 2 4-4" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" fill="currentColor" fill-opacity="0.2"/>
    </svg>`,
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M12 21s-7-5.5-7-11a7 7 0 1 1 14 0c0 5.5-7 11-7 11Z" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="10" r="3" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="10" r="3" fill="currentColor" fill-opacity="0.2"/>
    </svg>`
  ],
  // Card 4: Lightning + Clock (Fast & Scheduled)
  [
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8Z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8Z" fill="currentColor" fill-opacity="0.2"/>
    </svg>`,
    `<svg class="w-8 h-8 drop-shadow-md" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="10" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M12 6v6l4 2" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="12" r="10" fill="currentColor" fill-opacity="0.1"/>
    </svg>`
  ]
];
---

<section class="relative py-20 lg:py-28 overflow-hidden bg-gradient-to-br from-[#0a0f1a] via-[#0d1526] to-[#111b2e]">
  <!-- Subtle glow effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-queens-secondary/5 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-queens-light/5 rounded-full blur-[100px]"></div>
  </div>

  <div class="container mx-auto px-6 max-w-6xl relative z-10">
    <!-- Section Header -->
    <!-- Section Header -->
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-sans font-bold text-white text-center mb-16 tracking-tight">
      Services We Offer In <span class="font-serif italic font-normal text-queens-secondary">{cityName}</span>
    </h2>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div class="group relative rounded-2xl border border-white/10 bg-white/[0.02] backdrop-blur-sm p-8 lg:p-10 hover:border-white/20 hover:bg-white/[0.04] transition-all duration-500">
          
          <!-- Icon Pair -->
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 rounded-full border border-white/20 flex items-center justify-center text-white opacity-80 group-hover:border-queens-secondary/50 group-hover:text-queens-secondary transition-all duration-300">
              <Fragment set:html={iconPairs[index % iconPairs.length][0]} />
            </div>
            <div class="w-14 h-14 rounded-full border border-white/20 flex items-center justify-center text-white opacity-80 group-hover:border-queens-secondary/50 group-hover:text-queens-secondary transition-all duration-300">
              <Fragment set:html={iconPairs[index % iconPairs.length][1]} />
            </div>
          </div>

          <!-- Title -->
          <h3 class="text-xl lg:text-2xl font-bold text-white mb-4" set:html={service.title} />

          <!-- Description -->
          <p class="text-white opacity-60 leading-relaxed text-base lg:text-lg" set:html={service.text} />
        </div>
      ))}
    </div>
  </div>
</section>
