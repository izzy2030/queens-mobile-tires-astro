---
interface Props {
    icon: string;
    title: string;
    subtitle: string;
}

const { icon, title, subtitle } = Astro.props;

// Icon mapping for SVG paths
const icons: Record<string, string> = {
    clock: `<path stroke-width="2" stroke-linecap="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
    calendar: `<path stroke-width="2" stroke-linecap="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>`,
    location: `<path stroke-width="2" stroke-linecap="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-width="2" stroke-linecap="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>`,
};

const iconPath = icons[icon] || icons.clock;
---

<div
    class="flex items-center gap-4 p-4 rounded-2xl bg-gray-50 hover:bg-queens-secondary/5 transition-colors duration-300"
>
    <div
        class="w-12 h-12 bg-queens-secondary/10 rounded-xl flex items-center justify-center flex-shrink-0"
    >
        <svg
            class="w-6 h-6 text-queens-secondary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <Fragment set:html={iconPath} />
        </svg>
    </div>
    <div>
        <h4 class="font-bold text-queens-primary">{title}</h4>
        <p class="text-gray-600 text-sm">{subtitle}</p>
    </div>
</div>
