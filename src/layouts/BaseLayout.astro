---
import { ViewTransitions } from "astro:transitions";
import "@fontsource/inter";
import "@fontsource/source-serif-4";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileStickyCTA from "../components/MobileStickyCTA.astro";
const { title = "Queens Mobile Tires", description = "We come to you." } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
    <ViewTransitions />
    <slot name="head" />
  </head>
  <body
    class="bg-gray-50 text-queens-primary flex flex-col min-h-screen w-full overflow-x-hidden"
  >
    <a href="#main-content" class="skip-to-content-link">Skip to main content</a>
    <Header />

    <main id="main-content" class="flex-grow">
      <slot />
    </main>

    <Footer />
    <MobileStickyCTA />
  </body>
</html>
